@model ProductEditWebModel
@{
    ViewBag.Title = "Удаление товара";
}

<div class="container-md">
    <div class="row">
        <div class="col-sm-3">
            <partial name="Partial/_LeftSidebarPartial" />
        </div>
        <div class="col-sm-9">
            <h1>@ViewBag.Title</h1>

            <hr />
            <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="Product" asp-action="Index">Редактирование всего каталога</a>
            <hr />

            <div class="row">
                <div class="col-md-6">
                    <div>
                        <p>Вы действительно хотите <strong>удалить</strong> этот товар?</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Order)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Order)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.GenreName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.GenreName)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.AuthorName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.AuthorName)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.ImageUrl)
                        </dt>
                        <dd class="col-sm-8">
                            <img src="~/images/books/@Model.ImageUrl" width="200" alt="@Model.Name" />
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Price)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Price)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Message)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Message)
                        </dd>
                    </dl>

                    <form asp-area="Admin" asp-controller="Product" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" asp-antiforgery="true">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Подтвердить удаление" class="btn btn-danger" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
