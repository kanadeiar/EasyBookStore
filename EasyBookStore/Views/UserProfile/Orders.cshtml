@model IEnumerable<EasyBookStore.WebModels.Order.UserOrderWebModel>
@{
    ViewBag.Title = "Заказы пользователя";
    Layout = "_UserProfileLayout";
}

<h2 class="text-center display-6">@ViewBag.Title</h2>

<div class="table-responsive-md">
    <table class="table">
        <thead>
            <tr>
                <th>№</th>
                <th>Дата</th>
                <th>Адрес</th>
                <th>Телефон</th>
                <th>Количество</th>
                <th>Сумма</th>
                <th>Описание</th>
            </tr>
        </thead>
        <tbody>
            @{ var i = 1; }
            @foreach (var order in Model)
            {
                <tr>
                    <td>@(i++)</td>
                    <td>@order.Date.ToString("dd/MM/yy HH:mm")</td>
                    <td>@order.Address</td>
                    <td>@order.Phone</td>
                    <td>@order.Count</td>
                    <td>@order.TotalPrice.ToString("C")</td>
                    <td>@order.Description</td>
                </tr>
            }
        </tbody>
    </table>
</div>


