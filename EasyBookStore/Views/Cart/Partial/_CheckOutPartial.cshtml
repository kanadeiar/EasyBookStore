@model EasyBookStore.WebModels.Order.OrderWebModel

<form asp-action="CheckOut" asp-antiforgery="true">
    <div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Phone" class="control-label"></label>
            <input asp-for="Phone" class="form-control" placeholder="Введите свой Телефон" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" placeholder="Введите свой Адрес доставки" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" placeholder="Введите Описание своего заказа" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input class="btn btn-outline-success" type="submit" value="Оформить заказ" />
        </div>
    </div>

</form>