@model IEnumerable<Worker>

<div class="container">
    <h1>Сотрудники магазина</h1>
    <hr />
    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Главная страница</a>
    <hr />
    <table>
        <thead>
            <tr>
                <th>№</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var worker in Model)
            {
                <tr>
                    <td>@worker.Id</td>
                    <td>@worker.LastName</td>
                    <td>@worker.FirstName</td>
                    <td>@worker.Patronymic</td>
                    <td>@worker.Age</td>
                    <td><a class="btn btn-outline-dark" asp-controller="Worker" asp-action="Details" asp-route-id="@worker.Id">Детали</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
