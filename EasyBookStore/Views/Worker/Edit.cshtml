@model WorkerEditWebModel

@{
    ViewBag.Title = "Редактирование данных сотрудника";
}

<div class="container-md">
    <h1>@ViewBag.Title</h1>

    <hr />
    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Главная страница</a>
    / <a class="btn btn-outline-secondary" asp-controller="Worker" asp-action="Index">Все сотрудники магазина</a>
    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div class="alert alert-warning" asp-validation-summary="ModelOnly" class="text-danger"></div>

                @Html.HiddenFor(model => model.Id)
            
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Patronymic" class="control-label"></label>
                    <input asp-for="Patronymic" class="form-control" />
                    <span asp-validation-for="Patronymic" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    <input type="submit" value="Сохранить данные сотрудника" class="btn btn-primary" />
                </div>

            </form>
        </div>
    </div>
</div>





