@model LoginWebModel
@{
    ViewBag.Title = "Вход";
}

<div class="container-md">
    <h1>@ViewBag.Title</h1>

    <div class="row">
        <div class="col-sm-4">
            <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" asp-antiforgery="true">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="UserName" placeholder="Логин" />
                <span asp-validation-for="UserName" class="text-danger"></span>

                <input asp-for="Password" placeholder="Пароль" />
                <span asp-validation-for="Password" class="text-danger"></span>

                <span>
                    <input asp-for="RememberMe" class="checkbox">
                    Запомнить меня
                </span>

                <button type="submit" class="btn btn-default">Вход</button>
            </form>
        </div>

    </div>

</div>



