@model ProductWebModel
@{
    ViewBag.Title = "Детали товара";
}

<div class="container-md">

    <div class="row">
        <div class="col-sm-3">
            <partial name="Partial/_LeftSidebarPartial" />
        </div>
        <div class="col-sm-9">
            <div class="row">
                <div class="col-sm-5">
                    <div>
                        <img src="~/images/books/@Model.ImageUrl" alt="@Model.Name" width="400"/>
                    </div>

                </div>
                <div class="col-sm-7">
                    <div>
                        <h2>@Model.Name</h2>
                        <p>Артикул: @Model.Id.ToString("00000000")</p>
                        <p>@Model.Message</p>
                        <p><b>Доступность:</b> На складе</p>
                        <p><b>Состояние:</b> Новое</p>
                        <p><b>Жанр:</b> @Model.Genre</p>
                        <p><b>Автор:</b> @Model.Author</p>
                        <span>
                            <span>Цена: @Model.Price.ToString("C")</span>
                            <a class="btn btn-outline-success">
                                <i class="fas fa-shopping-cart"></i>
                                В корзину
                            </a>
                        </span>
                    </div>
                </div>
            </div>
            
            <partial name="Partial/_RecommendedBooksPartial" model="ViewBag.RecommendedBooks"/>
        </div>
    </div>

</div>